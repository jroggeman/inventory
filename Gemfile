source 'https://rubygems.org'

gem 'rails', '4.2.6'
gem 'pg', '~> 0.15'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'

# BCrypt for login
gem 'bcrypt', '~> 3.1.7'

# Nicer styles
gem 'bootstrap-sass', '~> 3.3.6'

# QR Codes
gem 'rqrcode-rails3'

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :development, :test do
  # Debugging
  gem 'byebug'

  # RSpec for testing
  gem 'rspec-rails'

  # Better factories
  gem 'factory_girl_rails'

  # Common tests for rails models
  gem 'shoulda-matchers'

  # Better integration tests
  gem 'capybara'

  # Open and view page during integration test
  gem 'launchy'
end
